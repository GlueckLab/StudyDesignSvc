<project name="study" default="test">
	<property environment="env"/>
	<property name="catalina.home" value="${env.CATALINA_HOME}" />
    <property name="svcname" value="study" />
    <property name="wardir" value="${basedir}/war" />
    <property name="sourcedir" value="${basedir}/../src" />
    <property name="bindir" value="${basedir}/bin" />
    <property name="wcdir" value="${basedir}/../WebContent" />
	<property name="javastatsdir" value="${basedir}/../../JavaStatistics/build/bin" />
	<property name="thirdpartydir" value="${basedir}/../../thirdparty" />
	<property name="javadocdir" value="${basedir}/javadoc/StudyDesignSvc-javadoc" />
	<property name="webservicecommonlibsdir" value="${basedir}/../../WebServiceCommon/build/bin" />
	
	<fileset id="thirdpartylibs" dir="${thirdpartydir}">
		<include name="ApacheCommonsMath/2.1/lib/commons-math-2.1.jar" />
		
		<include name="hibernate/4.0.0/lib/required/antlr-2.7.7.jar" />
		<include name="hibernate/4.0.0/lib/optional/c3p0/c3p0-0.9.1.jar" />
		<include name="hibernate/4.0.0/lib/required/classmate-0.5.4.jar" />
		<include name="hibernate/4.0.0/lib/required/commons-collections-3.2.1.jar" />
		<include name="hibernate/4.0.0/lib/optional/c3p0/hibernate-c3p0-4.0.0.Final.jar" />
		<include name="hibernate/4.0.0/lib/required/hibernate-commons-annotations-4.0.1.Final.jar" />
		<include name="hibernate/4.0.0/lib/required/hibernate-core-4.0.0.Final.jar" />
		<include name="hibernate/4.0.0/lib/required/hibernate-jpa-2.0-api-1.0.1.Final.jar" />
		<include name="hibernate/4.0.0/lib/required/dom4j-1.6.1.jar" />
		<include name="hibernate/4.0.0/lib/required/jandex-1.0.3.Final.jar" />
		<include name="hibernate/4.0.0/lib/required/javassist-3.12.1.GA.jar" />
		<include name="hibernate/4.0.0/lib/required/jboss-logging-3.1.0.CR2.jar" />
		<include name="hibernate/4.0.0/lib/required/jboss-transaction-api_1.1_spec-1.0.0.Final.jar" />
		
		
		<include name="jackson/1.9.4/lib/jackson-all-1.9.4.jar"/>
		<include name="junit/4.7/lib/junit-4.7.jar" />
		<include name="log4j/1.2.15/lib/log4j-1.2.15.jar" />
		<include name="mysql-connector-java/5.1.18/lib/mysql-connector-java-5.1.18-bin.jar"/>
		<include name="jsc/1.0/lib/jsc.jar" />
		
		<include name="restlet/2.0.10/lib/org.restlet.jar" />
		<include name="restlet/2.0.10/lib/org.restlet.ext.xml.jar" />
	    <include name="restlet/2.0.10/lib/org.restlet.ext.servlet.jar" />
		<include name="restlet/2.0.10/lib/org.restlet.ext.json.jar" />
		<include name="restlet/2.0.10/lib/org.restlet.ext.jackson.jar" />				
	</fileset>
		
	<path id="libraries">
		<fileset refid="thirdpartylibs"/>
    	<fileset dir="${javastatsdir}">
            <include name="JavaStatistics.jar"/>
        </fileset>		
		<fileset dir="${webservicecommonlibsdir}">			
			<include name="edu.ucdenver.bios.webservice.common-1.0.0.jar"/>
        </fileset>	
	</path>
		
    <target name="clean">
        <delete dir="${wardir}"/>
        <delete dir="${bindir}"/>
        <delete dir="${javadocdir}"/>
    	  <delete>
    	    <fileset dir="." includes="TEST-*"/>
    	  </delete>
        <mkdir dir="${wardir}"/>
        <mkdir dir="${bindir}"/>
    </target>

    <target name="compile" depends="clean, copy-resources">
      <javac debug="true"
             deprecation="on"
             listfiles="true"
             debuglevel="lines,vars,source"
             srcdir="${sourcedir}"
             destdir="${wardir}/WEB-INF/classes"
             classpathref="libraries"
      />
    </target>

    <target name="copy-resources">
        <copy todir="${wardir}/WEB-INF/classes">
            <fileset dir="${sourcedir}">
                <exclude name="**/*.java" />
            </fileset>
        </copy>
        <copy todir="${wardir}">
            <fileset dir="${wcdir}">
                <exclude name="**/.svn/**/*" />
            	<exclude name="test/*" />
            </fileset>
        </copy>
        <copy todir="${wardir}/WEB-INF/lib" flatten="true" >
            <fileset refid="thirdpartylibs" />
        	<fileset dir="${javastatsdir}">
                <include name="JavaStatistics.jar"/>
            </fileset>
        	<fileset dir="${webservicecommonlibsdir}">
                <include name="edu.ucdenver.bios.webservice.common-1.0.0.jar"/>
            </fileset>
        </copy>    	    
    </target>

    <!-- Build the project's web application.  -->
    <target name="compress" depends="compile">              
        <echo>webapps DIR IS ${bindir}</echo>
        <war destfile="${bindir}/${svcname}.war" webxml="${wardir}/WEB-INF/web.xml">
            <webinf dir="${wardir}/WEB-INF" excludes="**/web.xml"/>
            <classes dir="${wardir}/WEB-INF/classes"/>
            <classes dir="../config">
                <include name="log4j.properties"/>
            </classes>
            <lib dir="${wardir}/WEB-INF/lib" includes="**/*.jar"/>
        </war>
    </target>
    
    <target name="javadoc" depends="compile" description="Generates the API specification (javadoc)">
        <javadoc packagenames="edu.cudenver.bios.*"
                 access="public"
                 classpath="${basedir}/../classes" 
                 destdir="${javadocdir}"
                 use="true"
                 author="true"
                 version="true"
                 windowtitle="UC Denver Biostatistics - Study Design Service Java API Specification"
                 doctitle="UC Denver Biostatistics - Study Design Service Java API Specification">
             <fileset dir="${sourcedir}" defaultexcludes="yes">
                 <include name="**/*.java"/>
            </fileset>
            <header><![CDATA[<p><b>study design service</b></p>]]></header>
            <bottom><![CDATA[<font size=1>CU Denver Biostatistic Department</font>]]></bottom>
            <link href="http://java.sun.com/javase/6/docs/api"/>
        </javadoc>
    </target>
    
    <target name="test" depends="compress">
        <junit printsummary="yes" haltonfailure="yes" showoutput="true" fork="true">
            <classpath>
              <path refid="libraries" />
              <pathelement location="${wardir}/WEB-INF/classes"/>
            </classpath>
            <formatter type="plain" />
  		  <test name="edu.cudenver.bios.powersvc.test.TestParsing" haltonfailure="no">
  		  </test>
  		  <test name="edu.cudenver.bios.powersvc.test.TestRepresentation" haltonfailure="no">
  		  </test>
        </junit>
    </target>
	<target name="deploy" description="This target moves the ${svcname}.war 
		to the user's catalina.home\webapps directory." >
		<copy todir="${catalina.home}\webapps">
			<fileset dir="${bindir}">
				<include name="${svcname}.war"/>
			</fileset>
		</copy>
		<echo>Deployed the ${svcname}.war to ${catalina.home}\webapps</echo>
	</target>
	
	<target name="buildDeploy" depends="test, deploy"/>
	<!-- Create the javadoc distribution  -->
	<target name="javadoc-distribution" depends="javadoc">
		<jar destfile="${bindir}/${svcname}-javadoc.jar" basedir="${javadocdir}/.." >
			<manifest>
				<attribute name="Author" value="Uttara Sakhadeo"/>
				<section name="Shared">
					<attribute name="Title" value="${svcname} Javadoc"/>
					<attribute name="Vendor" value="CU Denver Biostatistics Department"/>
				</section>
				<section name="Copyright">
					<attribute name="Copy" value="(C) CU Denver Biostatistics Department"/>
				</section>
			</manifest>
		</jar>
	</target>
	
	<!-- Create the source distribution -->
	<target name="source-distribution">
		<jar destfile="${bindir}/${svcname}-source.jar" basedir="${basedir}/../.." 
			includes="PowerSvc/*,
				PowerSvc/build/build.xml,
				PowerSvc/config/**,
				PowerSvc/src/**,
				PowerSvc/text/**,
				PowerSvc/WebContent/**">			
			<manifest>
				<attribute name="Author" value="Uttara Sakhadeo"/>
				<section name="Shared">
					<attribute name="Title" value="${svcname} Source Code"/>
					<attribute name="Vendor" value="CU Denver Biostatistics Department"/>
				</section>
				<section name="Copyright">
					<attribute name="Copy" value="(C) CU Denver Biostatistics Department"/>
				</section>
			</manifest>
		</jar>
	</target>
</project>